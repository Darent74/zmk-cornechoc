#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

&mt { flavor = "tap-preferred"; };

/ {
    behaviors {
        td: td {
            compatible = "zmk,behavior-hold-tap";
            label = "TAPDANCE";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&mt ESCAPE GRAVE  &kp Q  &kp W  &kp F  &kp P      &kp B                   &mt INSERT J  &kp L  &kp U      &kp Y    &kp SEMICOLON  &kp BSPC
&kp TAB           &kp A  &kp R  &kp S  &kp T      &kp G                   &kp M         &kp N  &kp E      &kp I    &kp O          &kp SQT
&kp DEL           &kp Z  &kp X  &kp C  &kp D      &kp V                   &kp K         &kp H  &kp COMMA  &kp DOT  &kp FSLH       &kp MINUS
                                &mo 1  &kp LCTRL  &mt LEFT_SHIFT ENTER    &kp SPACE     &to 1  &kp RALT
            >;
        };

        layer_1 {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp GRAVE  &kp EXCL       &kp AT          &kp HASH      &kp DLLR       &kp PRCNT               &kp CARET  &kp AMPS   &kp KP_MULTIPLY  &kp LPAR  &kp RPAR  &kp BSPC
&kp TAB    &mt HOME LEFT  &kp DOWN_ARROW  &kp UP_ARROW  &mt END RIGHT  &kp PAGE_UP             &kp MINUS  &kp EQUAL  &kp LBKT         &kp RBKT  &kp BSLH  &kp SQT
&kp DEL    &trans         &trans          &trans        &trans         &kp PAGE_DOWN           &kp UNDER  &kp PLUS   &kp LBRC         &kp RBRC  &kp PIPE  &kp TILDE
                                          &kp LCTRL     &to 0          &mt LEFT_SHIFT ENTER    &kp SPACE  &to 3      &kp RALT
            >;
        };

        layer_2 {
            bindings = <
&trans  &trans  &kp C_VOLUME_DOWN  &kp C_PLAY_PAUSE  &kp C_MUTE  &kp C_VOLUME_UP    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &kp C_PREV         &kp C_STOP        &kp C_NEXT  &trans             &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans             &trans            &trans      &trans             &trans  &trans  &trans  &trans  &trans  &trans
                                   &trans            &to 0       &trans             &trans  &trans  &trans
            >;
        };

        layer_3 {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none       &kp LS(LC(TAB))  &kp LC(LEFT)  &kp LC(RIGHT)  &kp LC(TAB)      &kp PERIOD              &none      &kp N7        &kp N8        &kp N9        &none   &kp BSPC
&mo 4       &kp LEFT         &kp DOWN      &kp UP_ARROW   &kp RIGHT_ARROW  &kp SLASH               &none      &kp NUMBER_4  &kp N5        &kp NUMBER_6  &trans  &trans
&kp DELETE  &trans           &trans        &trans         &trans           &trans                  &kp N0     &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans  &to 2
                                           &kp LCTRL      &to 0            &mt LEFT_SHIFT ENTER    &kp SPACE  &to 1         &kp RALT
            >;
        };

        layer_4 {
            bindings = <
&trans  &none  &none  &none   &none       &bt BT_CLR_ALL    &bt BT_SEL 0   &bt BT_SEL 1   &bt BT_SEL 2   &bt BT_SEL 3   &bt BT_SEL 4   &trans
&trans  &none  &none  &trans  &bt BT_CLR  &trans            &bt BT_NXT     &bt BT_PRV     &trans         &trans         &trans         &trans
&trans  &none  &none  &none   &none       &none             &bt BT_DISC 0  &bt BT_DISC 1  &bt BT_DISC 2  &bt BT_DISC 3  &bt BT_DISC 4  &trans
                      &trans  &to 0       &trans            &trans         &trans         &trans
            >;
        };
    };
};
